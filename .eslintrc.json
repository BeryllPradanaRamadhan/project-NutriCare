{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "overrides": [
    {
      "files": ["**/*.jsx"],
      "rules": {
        "react/no-unescaped-entities": ["error", { "forbid": [">", "}"] }],
        "react/jsx-key": ["error", { "checkFragmentShorthand": true }]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jest"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",    
    "react/prop-types": [2, { "ignore": ["children", "showNavbarAndFooter"] }],
    "jsx-a11y/alt-text": 0


  }
}
